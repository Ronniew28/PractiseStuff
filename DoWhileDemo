
package dowhiledemo;

import java.io.IOException;

/**
 *
 * @author Ronnie W
 */
public class DoWhileDemo {

    
    public static void main(String[] args) throws IOException {
        char ch;
               
            do{
                System.out.println("Press a key followed by Enter: ");
                ch = (char) System.in.read(); //get a char
            } while(ch !='q');
    }
    
}
