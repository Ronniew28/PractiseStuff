
package switchcode;

/**
 *
 * @author Ronnie W
 */
public class SwitchCode {

    
    public static void main(String[] args) {
        int day = 2;
            switch (day) {
                case 1: 
                    System.out.println("Monday");
                    break;
                case 2: 
                    System.out.println("Tuesday");
                    break; 
                case 3: 
                    System.out.println("Wednesday");
                    break;    
            }
            
        char letter = 'z';
            switch (letter) {
                case 1:
                    System.out.println('a');
                    break;
                case 2:
                    System.out.println('z');
                    break; 
                case 3:
                    System.out.println('k');
                    break;    
            }
    }
    
}
