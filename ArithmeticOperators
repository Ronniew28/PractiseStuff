
package arithmeticoperatorswork;

/**
 *
 * @author Ronnie W
 */
public class ArithmeticOperatorsWork {

    
    public static void main(String[] args) {
        //Addition
        int a = 5;
        int b = 7;
        int c = a+b;
        System.out.println(a+b);
        System.out.println(c);
        System.out.println();
        
        //Subtraction
        int d = 7;
        int e = 4;
        int f = d-e;
        System.out.println(d-e);
        System.out.println(f);
        System.out.println();
                
        //Multiplication
        int g = 5;
        int h = 4;
        int i = g*h;
        System.out.println(g*h);
        System.out.println(i);
        System.out.println();
        
        //Division
        int j = 2;
        int k = 2;
        int l = j/k;
        System.out.println(j/k);
        System.out.println(l);
        System.out.println();
        
        //Prefix, Postfix Increment Operators
        //A shorthand way to increase or decrease a variable by 1
        //NB: note when the expression has been evaluated
        int aa = 5;
        int z = ++aa;
        int y = aa++;
        System.out.println(z);//output 6
        System.out.println(y);//output 6
        System.out.println();
        
        int num1 = 7;
        int num2 = --aa;
        int num3 = aa--;
        System.out.println(num2);//output 6
        System.out.println(num3);//output 6
        System.out.println();
        
        
        }
    
}
