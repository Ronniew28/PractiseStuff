
package java_constructors;

/**
 *
 * @author Ronnie W
 */
public class Java_Constructors {
    String color;
    int result;
    double digit;
        
    public Java_Constructors (String color) {
        this.color = color;
        }
    public Java_Constructors (int result) {
        this.result = result;
    }
    public Java_Constructors (double digit) {
        this.digit = digit;
        }
                
    public static void main(String[] args) {
      Java_Constructors shade = new Java_Constructors("green");
      System.out.println("Colour is " + shade.color);
      
      Java_Constructors num1 = new Java_Constructors(4);
      System.out.println("Number is " + num1.result);
      
      Java_Constructors decimal = new Java_Constructors(7.7);
      System.out.println("Decimal is " + decimal.digit);
    }
    
}
