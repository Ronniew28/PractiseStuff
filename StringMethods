
package stringclassmethods;

/**
 *
 * @author Ronnie W
 */
public class StringClassMethods {

    
    public static void main(String[] args) {
        String pirateMessage = " Buried Treasure Chest! ";
        
        //charAt
        char c2 = pirateMessage.charAt(4);
        System.out.println(c2);// output i
        
        char c3 = pirateMessage.charAt(7);
        System.out.println(c3);
        System.out.println("The above returned a blank space correctly");
        
        //indexOf
        int num1 = pirateMessage.indexOf('T');
        System.out.println(num1); //output 8
        
        int num2 = pirateMessage.indexOf('C');
        System.out.println(num2); //output 17
        
        //length
        int len = pirateMessage.length();
        System.out.println(len); //output 24
        
        //concat
        String stuff = pirateMessage.concat(pirateMessage);
        System.out.println(stuff);
        
        //replace
        String replace1 = pirateMessage.replace('e' , 'o');
        System.out.println(replace1);
    }
    
}
