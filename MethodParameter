
package methodparameter;

/**
 *
 * @author Ronnie W
 */
public class MethodParameter {
    static void sayHello(String name) {
        System.out.println("Hello " + name);
    }
    
    static void someText(String words) {
        System.out.println("This is " + words);
    }
    
    static void numbers(String num1) {
        System.out.println("The number is " + num1);
    }
    
    static void decimal(double num2) {
        System.out.println("The decimal is " + num2);
    }
    
    public static void main(String[] args) {
        sayHello("Tom");
        sayHello("Dick");
        sayHello("Harry");
        someText("Nonsense");
        numbers("7");
        decimal(2.7);
    }
    
}
